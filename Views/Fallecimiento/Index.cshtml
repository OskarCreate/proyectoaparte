  margin: 0 auto;
  padding: 12px 8px;
  background: #fff;
  border-radius: 12px;
  
  display: flex;
  flex-direction: column;
  gap: 5px;
  font-family: 'Segoe UI', sans-serif;
}
.solicitud-container {
    max-width: 900px;
    margin: 0 auto;
    background: #fff;
