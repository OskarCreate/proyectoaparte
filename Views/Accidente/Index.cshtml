/* Botón */
.form-actions {
    display: flex;
    justify-content: flex-end;
}

.btn-submit {
    background: #111;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 6px;
    cursor: pointer;
    transition: background 0.3s ease;
