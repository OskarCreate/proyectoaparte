@model proyectoIngSoft.Models.Accidente

@{
    ViewData["Title"] = "Registrar Accidente";
}

<div class="solicitud-container">
    <div class="header-bar">
        <a asp-controller="TipoSolicitud" asp-action="Index" class="btn-back">← Volver</a>
        <div class="header-right">
            <span class="label-inline">Solicitud de:</span>
            <select id="tipoSolicitud" class="form-select">
                <option value="@Url.Action("Index","Accidente")">Accidente</option>
                <option value="@Url.Action("Index","Enfermedad")">Enfermedad</option>
                <option value="@Url.Action("Index","Paternidad")">Paternidad</option>
                <option value="@Url.Action("Index","Maternidad")">Maternidad</option>
                <option value="@Url.Action("Index","Fallecimiento")">Fallecimiento Familiar</option>
                <option value="@Url.Action("Index","EnfermedadFam")">Enfermedad Familiar</option>
                
            </select>
        </div>
    </div>
    <form method="post" asp-action="Registrar" class="solicitud-form">

        <!-- Nombre y DNI -->
        <div class="form-row">
            <div class="form-group">
                <label>Nombre Completo *</label>
                <input asp-for="NombreComp" class="form-control" placeholder="Nombre completo del empleado" />
                <span asp-validation-for="NombreComp" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>DNI *</label>
                <input asp-for="DNI" class="form-control" maxlength="8" placeholder="12345678" />
                <span asp-validation-for="DNI" class="text-danger"></span>
            </div>
        </div>

        <!-- Fechas -->
        <div class="form-row">
            <div class="form-group">
                <label>Fecha de Inicio *</label>
                <input asp-for="FechaIni" type="date" class="form-control" placeholder="dd/mm/aaaa" />
                <span asp-validation-for="FechaIni" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Fecha de Fin *</label>
                <input asp-for="FechaFin" type="date" class="form-control" placeholder="dd/mm/aaaa" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>
        </div>

        <!-- Observaciones -->
        <div class="form-row">
            <div class="form-group full">
                <label>Observaciones</label>
                <textarea asp-for="Observaciones" class="form-control" placeholder="Información adicional relevante"></textarea>
                <span asp-validation-for="Observaciones" class="text-danger"></span>
            </div>
        </div>

        <!-- Tipo de DM -->
        <div class="form-row">
            <div class="form-group full">
                <label>Tipo de DM *</label>
                <select asp-for="TipoDM" class="form-control">
                    <option value="">Seleccionar tipo de DM</option>
                    <option>Temporal</option>
                    <option>Permanente</option>
                    <option>Otro</option>
                </select>
                <span asp-validation-for="TipoDM" class="text-danger"></span>
            </div>
        </div>

        <!-- Botón -->
        <div class="form-actions">
            <button type="submit" class="btn-submit">Registrar Solicitud</button>
        </div>
    </form>
</div>
<script>
    document.getElementById("tipoSolicitud").addEventListener("change", function () {
        if (this.value) {
            window.location.href = this.value;
        }
    });
</script>
<style>
/* Contenedor principal */
.solicitud-container {
    background: #fff;
    padding: 20px;
    border-radius: 12px;
    box-shadow: 0 0 8px rgba(0,0,0,0.1);
    max-width: 900px;
    margin: auto;
    font-family: Arial, sans-serif;
}

