  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0px;
  padding: 8px 4px;
}
.btn-back {
  background: #fff;
  border: 1px solid #d1d5db;
  border-radius: 8px;
  padding: 6px 14px;
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  color: #111827;
}
.btn-back:hover {
  background: #f3f4f6;
}
.header-bar .btn-back {
    text-decoration: none;
    color: #111827;
    font-weight: bold;
}
.header-right {
    display: flex;
    align-items: center;
    gap: 8px;
}

.label-inline {
  font-weight: 500;
  font-size: 14px;
  color: #111827;
  white-space: nowrap; /* evita que "de:" se baje a otra línea */
}

.select-small {
  padding: 6px 10px;
  border-radius: 8px;
  font-size: 14px;
  width: auto;
  min-width: 140px;
}

.solicitud-form {
  max-width: 850px;
  margin: 0 auto;
  padding: 10px 12px;
  background: #fff;
  border-radius: 12px;
  
  display: flex;
  flex-direction: column;
  gap: 20px;
  font-family: 'Segoe UI', sans-serif;
