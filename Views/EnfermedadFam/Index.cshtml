@model proyectoIngSoft.Models.EnfermedadFam

@{
    ViewData["Title"] = "Registrar Enfermedad Familiar";
}

<div class="solicitud-container">
    <div class="header-bar">
    <a asp-controller="TipoSolicitud" asp-action="Index" class="btn-back">
        ← Volver
    </a>
    <div class="header-right">
        <span class="label-inline">Solicitud de:</span>
        <select id="tipoSolicitud" class="form-select">
            <option value="@Url.Action("Index","EnfermedadFam")">Enfermedad Familiar</option>
            <option value="@Url.Action("Index","Paternidad")">Paternidad</option>
            <option value="@Url.Action("Index","Accidente")">Accidente</option>
            <option value="@Url.Action("Index","Enfermedad")">Enfermedad</option>
            <option value="@Url.Action("Index","Maternidad")">Maternidad</option>
            <option value="@Url.Action("Index","Fallecimiento")">Fallecimiento Familiar</option>
            
        </select>
    </div>
</div>

    <form method="post" asp-action="Registrar" class="solicitud-form">

        <!-- Nombre y parentesco -->
        <div class="form-row">
            <div class="form-group">
                <label>Nombre del Familiar</label>
        <input asp-for="NombreFamiliar" class="form-control" />
        <span asp-validation-for="NombreFamiliar" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Parentesco *</label>
                <select asp-for="Parentesco" class="form-control">
                    <option value="">Seleccionar parentesco</option>
                    <option>Padre</option>
                    <option>Madre</option>
                    <option>Esposo</option>
                    <option>Esposa</option>
                    <option>Hijo</option>
                    <option>Hija</option>
                    <option>Hermano</option>
                    <option>Hermana</option>
                    <option>Abuelo</option>
                    <option>Abuela</option>
                    <option>Otro</option>
                </select>
                <span asp-validation-for="Parentesco" class="text-danger"></span>
            </div>
        </div>

        

        <!-- Centro médico y médico tratante -->
        <div class="form-row">
            <div class="form-group">
                <label>Centro Médico</label>
                <input asp-for="CentroMedico" class="form-control" />
                <span asp-validation-for="CentroMedico" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Nombre del Médico</label>
                <input asp-for="Medico" class="form-control" />
                <span asp-validation-for="Medico" class="text-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label>Fecha de Inicio</label>
                <input asp-for="FechaIni" type="date" class="form-control" />
                <span asp-validation-for="FechaIni" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Fecha de Fin</label>
                <input asp-for="FechaFin" type="date" class="form-control" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>
        </div>

        <!-- Número CMP y fecha diagnóstico -->
        <div class="form-row">
            <div class="form-group">
                <label>Número CMP del Médico</label>
                <input asp-for="NumeroCMP" class="form-control" />
                <span asp-validation-for="NumeroCMP" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Fecha de Diagnostico</label>
                <input asp-for="FechaDiag" type="date" class="form-control" />
                <span asp-validation-for="FechaDiag" class="text-danger"></span>
            </div>
        </div>

        <!-- Días solicitados -->
        <div class="form-row">
            <div class="form-group full">
                <label>Días Solicitados</label>
                <input asp-for="DiaSoli" type="number" class="form-control" />
                <span asp-validation-for="DiaSoli" class="text-danger"></span>
            </div>
        </div>

        <!-- Documentos -->
        <div class="documentos-section">
            <h4>Documentos Finales</h4>
            <div class="form-row">
                <div class="upload-box">
                    <label>Certificado Médico</label>
                    <div class="upload-area">
                        
                        <input type="file" name="archivo" class="form-control" />
                        <p>Subir certificado<br><span>PDF, JPG, PNG</span></p>
                    </div>
                </div>

                <div class="upload-box">
                    <label>DNI del Familiar</label>
                    <div class="upload-area">
                        
                        <input type="file" name="archivo" class="form-control" />
                        <p>Subir DNI<br><span>PDF, JPG, PNG</span></p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Botón -->
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Registrar Solicitud</button>
        </div>
    </form>
</div>
<script>
    document.getElementById("tipoSolicitud").addEventListener("change", function () {
        if (this.value) {
            window.location.href = this.value;
        }
    });
</script>
<style>
/* Contenedor principal */
.solicitud-container {
    background: #fff;
    padding: 10px;
    border-radius: 12px;
    box-shadow: 0 0 8px rgba(0,0,0,0.1);
    max-width: 900px;
    margin: 20px auto;
    font-family: Arial, sans-serif;
}

/* Header */
.header-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 18px;
  padding: 8px 4px;
}
.btn-back {
  background: #fff;
  border: 1px solid #d1d5db;
  border-radius: 8px;
  padding: 6px 14px;
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  color: #111827;
}
.btn-back:hover {
  background: #f3f4f6;
}
.header-bar .btn-back {
    text-decoration: none;
    color: #111827;
    font-weight: bold;
}

.header-right {
    display: flex;
    align-items: center;
    gap: 8px;
}

.label-inline {
  font-weight: 500;
  font-size: 14px;
  color: #111827;
  white-space: nowrap; /* evita que "de:" se baje a otra línea */
}

.select-small {
  padding: 6px 10px;
  border-radius: 8px;
  font-size: 14px;
  width: auto;
  min-width: 140px;
}

.solicitud-form {
  max-width: 850px;
  margin: 0 auto;
  padding: 0px 10px;
  background: #fff;
  border-radius: 12px;
  
  display: flex;
  flex-direction: column;
  gap: 20px;
  font-family: 'Segoe UI', sans-serif;
}

/* FORMULARIO */
.solicitud-form {
    display: flex;
    flex-direction: column;
    gap: 0px;
}

/* Filas de inputs */
.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 18px;
}

.form-group {
    display: flex;
    flex-direction: column;
}

.form-group.full {
    grid-column: span 2;
}

.form-control {
    border: 1px solid #ddd;
    padding: 10px;
    border-radius: 6px;
    background: #f9f9f9;
    margin-top: 6px;
}

/* Documentos */
.documentos-section {
    margin-top: 5px;
}

.documentos-section h4 {
    margin-bottom: 15px;
    font-size: 16px;
    font-weight: bold;
}

.upload-box {
    flex: 1;
}

.upload-area {
    border: 2px dashed #ccc;
    border-radius: 8px;
    padding: 20px;
    text-align: center;
    background: #fafafa;
    margin-top: 8px;
}

.upload-area p {
    margin: 10px 0 0;
    font-size: 14px;
    color: #666;
}

/* Botón */
.form-actions {
    text-align: right;
    margin-top: 20px;
}

.btn.btn-primary {
    background: #111;
    color: #fff;
    border: none;
    padding: 10px 20px;
    border-radius: 6px;
    cursor: pointer;
    transition: background 0.3s ease;
}

.btn.btn-primary:hover {
    background: #000;
}

</style>