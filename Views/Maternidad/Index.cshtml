@model proyectoIngSoft.Models.Maternidad

@{
    ViewData["Title"] = "Registrar Maternidad";
}



<!-- üîπ Caja del formulario -->
<div class="form-container">
<div class="header-bar">
    <a asp-controller="TipoSolicitud" asp-action="Index" class="btn-back">
        ‚Üê Volver
    </a>
    <div class="header-right">
        <span class="label-inline">Solicitud de:</span>
        <select id="tipoSolicitud" class="form-select">
            <option value="@Url.Action("Index","Maternidad")">Maternidad</option>
            <option value="@Url.Action("Index","Accidente")">Accidente</option>
            <option value="@Url.Action("Index","Enfermedad")">Enfermedad</option>
            <option value="@Url.Action("Index","Paternidad")">Paternidad</option>
            <option value="@Url.Action("Index","Fallecimiento")">Fallecimiento Familiar</option>
            <option value="@Url.Action("Index","EnfermedadFam")">Enfermedad Familiar</option>
        </select>
    </div>
</div>
    <form method="post" asp-action="Registrar" class="form-grid">
        <div class="form-group">
            <label>Fecha Probable de Parto *</label>
            <input asp-for="FechaParto" type="date" class="form-control" />
        </div>

        <div class="form-group">
            <label>Semanas de Gestaci√≥n</label>
            <input asp-for="SemanasGest" type="number" class="form-control" />
        </div>

        <div class="form-group">
            <label>Fecha de Inicio</label>
            <input asp-for="FechaIni" type="date" class="form-control" />
            <span asp-validation-for="FechaIni" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Fecha de Fin</label>
            <input asp-for="FechaFin" type="date" class="form-control" />
            <span asp-validation-for="FechaFin" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>¬øParto M√∫ltiple? *</label>
            <select asp-for="PartoMult" class="form-control">
                <option value="">Seleccionar opci√≥n</option>
                <option>S√≠</option>
                <option>No</option>
            </select>
        </div>

        <div class="form-group">
            <label>Fecha de √öltima Menstruaci√≥n (FUM) *</label>
            <input asp-for="FechaUltM" type="date" class="form-control" />
        </div>

        <div class="form-group">
            <label>Centro M√©dico *</label>
            <input asp-for="CentroMed" class="form-control" placeholder="Hospital, cl√≠nica, etc." />
        </div>

        <div class="form-group">
            <label>M√©dico Tratante *</label>
            <input asp-for="MedicoT" class="form-control" placeholder="Dr. Juan P√©rez" />
        </div>

        <div class="form-group full-width">
            <label>Complicaciones durante el Embarazo</label>
            <textarea asp-for="Descripcion" class="form-control" placeholder="Descripci√≥n de complicaciones si las hubo"></textarea>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn-submit">Registrar Solicitud</button>
        </div>
    </form>
</div>

<script>
    document.getElementById("tipoSolicitud").addEventListener("change", function () {
        if (this.value) {
            window.location.href = this.value;
        }
    });
</script>

