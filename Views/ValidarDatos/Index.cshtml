@model proyectoIngSoft.Models.ValidarDatos

@{
    ViewData["Title"] = "Verificación de Identidad";
}

<div class="card shadow p-4" style="max-width:500px;margin:auto;border-radius:12px;">
    <h3 class="text-center mb-4">Verificación de Identidad</h3>

    <form asp-action="Index" method="post" novalidate>
        <!-- DNI -->
        <div class="form-group mb-3">
            <label for="dni" class="form-label"><b>Número DNI</b></label>
            <input asp-for="DNI" class="form-control" placeholder="Ingrese su DNI" maxlength="8" />
            <span asp-validation-for="DNI" class="text-danger"></span>
        </div>

        <!-- Ubigeo -->
        <div class="form-group mb-3">
            <label for="ubigeo" class="form-label">
                <b>UBIGEO del DNI</b>
                <!-- Ícono que abre el modal -->
                <a href="#" data-bs-toggle="modal" data-bs-target="#ubigeoModal" class="ms-2">
                    <i class="bi bi-question-circle text-dark"></i>
                </a>
            </label>
            <input asp-for="Ubigeo" class="form-control" placeholder="Ingrese los 6 dígitos de su UBIGEO" maxlength="6" />
            <span asp-validation-for="Ubigeo" class="text-danger"></span>
        </div>

        <!-- Captcha dentro de un bloque -->
        <div class="p-3 rounded mb-3" 
             style="background:linear-gradient(90deg,#dbeafe 0%,#ede9fe 100%);">
            <label class="form-label fw-bold"><b>Verificación CAPTCHA</b></label>

            <!-- Código + botón refrescar separados -->
            <div class="d-flex justify-content-between align-items-center mb-2">
                <div class="border p-2 text-center fw-bold fs-4 bg-white" 
                     style="min-width:100px; border-radius:4px 0 4px 0;">
                    @ViewBag.Captcha
                </div>
                <a asp-action="Index" title="Generar nuevo código" 
                   class="d-flex justify-content-center align-items-center bg-white border rounded shadow-sm"
                   style="width:46px;height:42px;">
                    <i class="bi bi-arrow-repeat fs-5 text-dark"></i>
                </a>
            </div>

            <!-- Input del captcha -->
            <label for="captcha" class="form-label"><b>Ingrese el código mostrado:</b></label>
            <input asp-for="Captcha" class="form-control" placeholder="Código CAPTCHA" />
            <span asp-validation-for="Captcha" class="text-danger"></span>
        </div>

        <!-- Botón -->
        <button type="submit" class="btn btn-secondary w-100 mt-2">
            VERIFICAR DATOS
        </button>
    </form>

    <!-- Mensaje informativo -->
    <div class="mt-3 text-center text-muted" style="font-size:0.9rem;">
        Asegúrese de ingresar correctamente todos los datos solicitados
    </div>
</div>

<!-- Modal con la imagen del DNI -->
<div class="modal fade" id="ubigeoModal" tabindex="-1" aria-labelledby="ubigeoModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="ubigeoModalLabel">Ubicación del UBIGEO en el DNI</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
      </div>
      <div class="modal-body text-center">
        <img src="~/images/dni.png" alt="Ubicación del UBIGEO en el DNI" class="img-fluid rounded shadow">
      </div>
    </div>
  </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">