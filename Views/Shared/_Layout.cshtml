@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    // Obtener datos de la sesión
    var userEmail = HttpContextAccessor.HttpContext?.Session.GetString("User");
    var rol = HttpContextAccessor.HttpContext?.Session.GetString("Rol");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - proyectoIngSoft</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/proyectoIngSoft.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">proyectoIngSoft</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" 
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        @if (!string.IsNullOrEmpty(userEmail))
                        {

                            @if (rol == "Jefe")
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="gestionDropdown" role="button" data-bs-toggle="dropdown">
                                        Gestión
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Lista" asp-action="Index">Lista</a></li>
                                        <li><a class="dropdown-item" asp-controller="Lista" asp-action="DescansosProlongados">Subsidios</a></li>
                                        <li><a class="dropdown-item" asp-controller="Lista" asp-action="SubsidiosJefe">Subsidios Jefe</a></li>
                                        <li><a class="dropdown-item" asp-controller="Lista" asp-action="SupervisionSubsidios">Supervisión</a></li>
                                        <li><a class="dropdown-item" asp-controller="SistemaSolicitud" asp-action="ListaSolicitudes">Ver Lista de Solicitudes</a></li>
                                    </ul>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="monitoreoDropdown" role="button" data-bs-toggle="dropdown">
                                        Monitoreo
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="Monitoreo" asp-action="Index">Panel de Monitoreo</a></li>
                                        <li><a class="dropdown-item" asp-controller="Trabajadores" asp-action="Index">Trabajadores</a></li>
                                    </ul>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="notifDropdown" role="button" data-bs-toggle="dropdown">
                                        Notificaciones
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="/Simulaciones/CrearNotificacion">Simuladas</a></li>
                                        <li><a class="dropdown-item" asp-controller="NotificacionesGenerales" asp-action="Crear">Generales</a></li>
                                    </ul>
                                </li>
                            }
                            else if (rol == "Bienestar")
                            {
                                <li class="nav-item">
                                    <li><a class="nav-link text-dark" asp-controller="Lista" asp-action="Index">Lista</a></li>
                                    <a class="nav-link text-dark" asp-controller="SistemaSolicitud" asp-action="ListaSolicitudes">
                                        Ver Lista de Solicitudes
                                    </a>
                                </li>
                            }
                            else if (rol == "Empleado" || rol == "Trabajador")
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="empleadoDropdown" role="button" data-bs-toggle="dropdown">
                                        Opciones
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" asp-controller="SistemaSolicitud" asp-action="Index">Solicitudes</a></li>

                                        @if (rol == "Trabajador")
                                        {
                                            <li><a class="dropdown-item" asp-controller="Simulaciones" asp-action="MisNotificaciones">Mis Notificaciones</a></li>
                                        }
                                    </ul>
                                </li>
                            }
                        }

                    </ul>

                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - proyectoIngSoft - 
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

