            <div class="col-md-6">
                <p><strong>Estado:</strong> @Model.EstadoSubsidioA</p>
            </div>
            <div class="col-md-6">
                <p><strong>Fecha Inicio:</strong> @Model.FechaIni.ToString("dd/MM/yyyy")</p>
            </div>
            <div class="col-md-6">
