
@{
    ViewData["Title"] = "Sistema de Solicitudes Médicas";
}

@{
    ViewData["Title"] = "Sistema de Solicitudes Médicas";
}

<div class="main-wrapper d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg border-0 rounded-4 p-5 text-center" style="max-width: 500px; background-color: #ffffff;">
        <div class="card-header bg-transparent border-0 mb-3">
            <i class="bi bi-file-earmark-medical text-primary" style="font-size: 4rem;"></i>
        </div>

        <h2 class="card-title fw-bold text-dark">Sistema de Solicitudes Médicas</h2>
        <p class="text-muted mb-4">
            Gestiona tus solicitudes de certificados médicos de manera eficiente y organizada.
        </p>

        <div class="d-grid gap-2 mt-3">
            <!-- Este botón puede verlo cualquier usuario -->
            <a asp-controller="TipoSolicitud" asp-action="Index" class="btn btn-outline-primary btn-lg">
                <i class="bi bi-list"></i> Realizar nueva solicitud
            </a>

            <!-- Solo visible para roles Bienestar y Jefe -->
            @if (User.IsInRole("Bienestar") || User.IsInRole("Jefe"))
            {
                <a asp-controller="SistemaSolicitud" asp-action="ListaSolicitudes" class="btn btn-outline-primary btn-lg">
                    <i class="bi bi-list"></i> Ver Lista de Solicitudes
                </a>
            }
        </div>

        <div class="info-box mt-4 p-3 bg-light border rounded-3">
            <h5 class="text-secondary fw-semibold">ℹ️ Información</h5>
            <p class="text-secondary mb-0">
                Este sistema te permite gestionar solicitudes de certificados médicos tanto del 
                <strong>CITT</strong> como del <strong>CMP</strong> de manera sencilla.
            </p>
        </div>
    </div>
</div>


<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<style>
    .btn-outline-primary {
        border-width: 2px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .btn-outline-primary:hover {
        background-color: #0d6efd;
        color: white;
        transform: scale(1.03);
    }

    .info-box {
        background-color: #f9f9f9;
    }

    body {
        font-family: 'Segoe UI', Roboto, sans-serif;
    }
</style>
